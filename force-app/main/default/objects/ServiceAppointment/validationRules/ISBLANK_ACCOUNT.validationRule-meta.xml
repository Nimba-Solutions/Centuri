<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ISBLANK_ACCOUNT</fullName>
    <active>true</active>
    <description>28653</description>
    <errorConditionFormula>AND(NOT(ISNEW()),
RecordType.DeveloperName=&quot;NPLUS_Basic&quot;, 
ISBLANK( AccountId ))</errorConditionFormula>
    <errorMessage>Account should not be missing for NPLUS_Basic record types</errorMessage>
</ValidationRule>
