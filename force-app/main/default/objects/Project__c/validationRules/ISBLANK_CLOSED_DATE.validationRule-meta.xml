<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ISBLANK_CLOSED_DATE</fullName>
    <active>true</active>
    <description>30491</description>
    <errorConditionFormula>AND(
ISBLANK( Closed_Date__c ),
TEXT( Status__c )=&apos;Closed&apos;)</errorConditionFormula>
    <errorMessage>Project Closed Date is required when Status is Closed</errorMessage>
</ValidationRule>
