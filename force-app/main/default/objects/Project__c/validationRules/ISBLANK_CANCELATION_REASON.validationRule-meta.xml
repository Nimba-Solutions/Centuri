<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ISBLANK_CANCELATION_REASON</fullName>
    <active>true</active>
    <description>30491</description>
    <errorConditionFormula>AND(
ISBLANK(    Cancelation_Reason__c    ),
TEXT( Status__c )=&apos;Canceled&apos;)</errorConditionFormula>
    <errorMessage>Project Cancelation Reason is required when Status is Canceled</errorMessage>
</ValidationRule>
