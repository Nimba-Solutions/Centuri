<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ISBLANK_CLOSED_DATE</fullName>
    <active>true</active>
    <description>29526</description>
    <errorConditionFormula>AND(
ISBLANK( Closed_Date__c ),
TEXT( Status__c ) = &apos;Closed&apos;)</errorConditionFormula>
    <errorMessage>Sub Project Closed Date is required when status is Closed</errorMessage>
</ValidationRule>
