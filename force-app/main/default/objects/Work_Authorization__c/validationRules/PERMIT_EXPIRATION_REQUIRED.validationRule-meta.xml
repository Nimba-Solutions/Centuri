<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PERMIT_EXPIRATION_REQUIRED</fullName>
    <active>true</active>
    <description>28043 The Expiration Date cannot be blank</description>
    <errorConditionFormula>AND( RecordType.DeveloperName = &apos;Permit&apos;,TEXT( Status__c )=&apos;Approved&apos;,
ISBLANK( Expiration_Date__c))</errorConditionFormula>
    <errorMessage>Work Authorization Expiration Date cannot be blank if Approved</errorMessage>
</ValidationRule>
